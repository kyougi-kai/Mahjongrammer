<body>
    <div class="main-content">
        <div class="main-bord">
            <div class="top name">
                <p></p>
            </div>
            <div class="right name">
                <p></p>
            </div>
            <div class="bottom name">
                <p id="usernameText"><%= username %></p>
            </div>
            <div class="left name">
                <p></p>
            </div>

            <div class="throw-hai top-content">
                word
            </div>
            <div class="throw-hai right-content">
                word
            </div>
            <div class="throw-hai bottom-content">
                word
            </div>
