<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>user</title>
    <link rel="stylesheet" href="/css/index.css">
</head>

<body>
    <div class="main-content">
        <div class="login-div">
            <div class="login-header">
                <button onclick="changeForm('login');">
                    <p style="border-bottom: 1px solid white;">ログイン</p>
                </button>
                <button onclick="changeForm('signin');">
                    <p>サインイン</p>
                </button>
            </div>
            <form id="loginForm">
                <div>
                    <p>ユーザー名</p>
                    <input type="text" id="usernameInput" required>
                    <p>パスワード</p>
                    <input type="password" id="passwordInput" required>
                </div>
                <div class="login-footer">
                    <button type="submit">決定</button>
                </div>
            </form>
        </div>
    </div>
    <input type="text" id="eia">
    <input type="button" value="ei" onclick="send();">

    <script>
        async function send() {
            const response = await fetch(`https://api.languagetool.org/v2/check`, {
                method: 'POST',
                headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                body: new URLSearchParams({
                    text: document.getElementById('eia').value,
                    language: "en-US"
                })
            });
            const data = await response.json();
            console.log(data);
        }
    </script>
    <script src="/js/index.js"></script>
</body>

</html>